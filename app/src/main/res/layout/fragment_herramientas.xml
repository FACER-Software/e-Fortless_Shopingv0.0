<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Herramientas">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/fond" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/CarroBrum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="70dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/btn_fonfo_color"
            android:drawableLeft="@drawable/carro"
            android:elevation="5dp"
            android:paddingLeft="100dp"
            android:paddingRight="100dp"
            android:text="Carrito de compras"
            android:textAllCaps="false"
            android:textColor="@color/azulito1"
            android:textSize="16dp"
            android:visibility="visible" />

        <Button
            android:id="@+id/InfoNutri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/btn_fonfo_color"
            android:drawableLeft="@drawable/cinta"
            android:elevation="5dp"
            android:paddingLeft="100dp"
            android:paddingRight="100dp"
            android:text="Informacion Nutrimental"
            android:textAllCaps="false"
            android:textColor="@color/azulito1"
            android:textSize="16dp"
            android:visibility="visible" />

        <Button
            android:id="@+id/Pago"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/btn_fonfo_color"
            android:drawableLeft="@drawable/pago"
            android:elevation="5dp"
            android:paddingLeft="100dp"
            android:paddingRight="100dp"
            android:text="Informacion de pago"
            android:textAllCaps="false"
            android:textColor="@color/azulito1"
            android:textSize="16dp"
            android:visibility="visible" />
    </LinearLayout>

</FrameLayout>